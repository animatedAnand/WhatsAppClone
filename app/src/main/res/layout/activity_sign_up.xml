<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gray_background"
    android:gravity="center"
    tools:context=".SignUpActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_whatsapp_icon"/>
    <EditText
        android:id="@+id/et_sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:background="@color/white"
        android:padding="9dp"
        android:layout_marginVertical="4dp"/>
    <EditText
        android:id="@+id/et_sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@color/white"
        android:padding="9dp"
        android:layout_marginVertical="4dp"/>
    <EditText
        android:id="@+id/et_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@color/white"
        android:padding="9dp"
        android:layout_marginVertical="4dp"/>
    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:padding="6dp"
        android:textStyle="bold"
        android:layout_gravity="right"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_sign_up"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginVertical="8dp"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_google"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Google"
            android:drawableLeft="@drawable/ic_google_icon"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:padding="12dp"
            app:cornerRadius="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginVertical="8dp"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_fb"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            app:cornerRadius="4dp"
            android:drawableLeft="@drawable/ic_facebook_icon"
            android:backgroundTint="@color/fb_color"
            app:backgroundTintMode="src_over"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:layout_marginLeft="4dp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign_up_with_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with phone?"
        android:textColor="@color/color_primary"
        android:padding="6dp"
        android:textStyle="bold"/>

</LinearLayout>